{
    "test_name": "test_virtual_traffics_example",
    "mode": "virtual radio",
    "actions":
    [
        {
            "name": "Start EPC",
            "paras": {}
        },
        
        {
            "name": "Start ENodeB",
            "paras": {
            	"--rf.device_name":"zmq",
            	"--rf.device_args":"fail_on_disconnect=true,tx_port=tcp://*:2000,rx_port=tcp://localhost:2001,id=enb,base_srate=23.04e6"
            }
        },
        
        
        {
            "name": "Create Network Namespace",
            "paras": {
                "namespace": "ue1"
            }
        },

        {
            "name": "Run UE",
            "paras": {
                "namespace": "ue1"
            }
        },
        
        {
            "name": "Run IPERF Server",
            "paras": {}
        },
        
        {
            "name": "Connect Test xApp",
            "paras": {
            	"xapp_ip": "127.0.0.1",
            	"xapp_port": 8757
            }
        },

        {
            "name": "Generate Traffic",
            "paras": {
                "namespace": "ue1",
                "direction": "uplink",
                "traffic_gen_mode": "iperf",
                "bandwidth": 10,
                "iperf_time": 20
            }
        },

	{
            "name": "Stop IPERF Server",
            "paras": {}
        },
        
        {
            "name": "Stop UE",
            "paras": {
                "namespace": "ue1"
            }
        },
        
        {
            "name": "Stop ENodeB",
            "paras": {}
        },
        
        {
            "name": "Stop EPC",
            "paras": {}
        }
        
    ]
}
